
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <!--引入jquery-->
    <script src="https://cdn.bootcdn.net/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <!--引入bootstrap-->
    <link href="https://cdn.bootcdn.net/ajax/libs/twitter-bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.bootcdn.net/ajax/libs/twitter-bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <!--引入bootstrap-table-->
    <link href="https://cdn.bootcdn.net/ajax/libs/bootstrap-table/1.16.0/bootstrap-table.min.css" rel="stylesheet">
    <script src="https://cdn.bootcdn.net/ajax/libs/bootstrap-table/1.16.0/bootstrap-table.min.js"></script>
    <script src="https://cdn.bootcdn.net/ajax/libs/bootstrap-table/1.16.0/locale/bootstrap-table-zh-CN.min.js"></script>
    <!--toastr样式-->
    <link href="https://cdn.bootcdn.net/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet">
    <script src="https://cdn.bootcdn.net/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script src="~/scripts/admin-book-edit.js"></script>
</head>

<body>
    <table class="table" style="width: 80%; margin: 0 auto; background-color: black;">
        <tr style="text-align: center;">
            <td class="col-md-2"><a href="bookedit">书籍修改</a></td>
            <td class="col-md-2"><a href="admin_order_edit">订单记录</a></td>
            <td class="col-md-2"><a href="admin_faq">用户反馈</a></td>
            <td class="col-md-2"><a id="logout-btn" style="cursor:pointer">注销</a></td>
            <script>
                $('#logout-btn').click(function () {
                    if (window.confirm("是否注销") === false) return;
                    window.location.href = "/Home/logout";
                })
            </script>
        </tr>
    </table>

    <div class="panel-body" style="padding-bottom:0px;">
        <div class="panel panel-default">
            <div class="panel-heading">查询条件</div>
            <div class="panel-body">
                <form id="formSearch" class="form-horizontal">
                    <div class="form-group" style="margin-top:15px">
                        <label class="control-label col-sm-1" for="txt_search_bookname">书籍名称</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="txt_search_bookname">
                        </div>
                        <label class="control-label col-sm-1" for="txt_search_type">类别</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="txt_search_type">
                        </div>
                        <div class="col-sm-4" style="text-align:left;">
                            <button type="button" style="margin-left:50px" id="btn_query"
                                    class="btn btn-primary">
                                查询
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div id="toolbar" class="btn-group">
            <button id="btn_add" type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
            </button>
            <button id="btn_edit" type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
            </button>
            <button id="btn_delete" type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
            </button>
        </div>
        <table id="tb_books"></table>
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">新增</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="txt_bookimg">书籍图片</label>
                        <input type="file" name="file_bookimg" class="form-control" id="file_bookimg" placeholder="书籍图片">
                        <img id="txt_bookimg" class="img-rounded" src="" style="width: 100px; height: 100px;">
                    </div>
                    <div class="form-group">
                        <label for="txt_bookname">书籍名称</label>
                        <input type="text" name="txt_bookname" class="form-control" id="txt_bookname" placeholder="书籍名称">
                    </div>
                    <div class="form-group">
                        <label for="txt_bookinfo">书籍简介</label>
                        <input type="text" name="txt_bookinfo" class="form-control" id="txt_bookinfo" placeholder="书籍简介">
                    </div>
                    <div class="form-group">
                        <label for="txt_booktype">书籍类型</label>
                        <input type="text" name="txt_booktype" class="form-control" id="txt_booktype" placeholder="书籍类型">
                    </div>
                    <div class="form-group">
                        <label for="txt_price">单价</label>
                        <input type="text" name="txt_price" class="form-control" id="txt_bookprice" placeholder="单价">
                    </div>
                    <div class="form-group">
                        <label for="txt_count">数量</label>
                        <input type="text" name="txt_count" class="form-control" id="txt_bookcount" placeholder="数量">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>关闭</button>
                    <button type="button" id="btn_submit" class="btn btn-primary" data-dismiss="modal"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>保存</button>
                </div>
            </div>
        </div>
    </div>
</body>

</html>